<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="ActivityStyle" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary_up</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_up</item>
        <item name="android:colorAccent">@color/accent_up</item>
        <item name="android:navigationBarColor">@color/navigation_bar_up</item>
        <item name="android:windowBackground">@color/window_background_up</item>
        <item name="android:textColorPrimary">@color/text_color_up</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>
    <style name="TextViewStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffd005</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#c3a7f1</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">10dp</item>

    </style>
</resources>